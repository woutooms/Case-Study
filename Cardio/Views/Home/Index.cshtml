@model ContentfulCollection<CardioModel>

@{
    ViewData["Title"] = "Home Page";
}


<style>
    h1 {
        text-align: center;
        font-weight: bold;
        font-size: 70px;
    }
    .blokken{
        border: 5px solid darkgray;    
